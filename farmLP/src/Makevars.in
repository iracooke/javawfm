JAVA_LIBS=@JAVA_LIBS@
JAVA_CPPFLAGS=@JAVA_CPPFLAGS@
JAVA_HOME=@JAVA_HOME@
JAVA=@JAVA@
JAVAC=@JAVAC@
JAVAH=@JAVAH@

# Directory with COIN header files
COININCDIR = depends/coin-Cbc/include

# Directory with COIN libraries
COINLIBDIR = ./depends/coin-Cbc/lib/

PKG_CPPFLAGS+=-Iinclude @JAVA_CPPFLAGS@ -I$(COININCDIR)
CXX=@CXX@


# Directory with COIN header files
COININCDIR = depends/coin-Cbc/include

# Directory with COIN libraries
COINLIBDIR = depends/coin-Cbc/lib/

PKG_CXXFLAGS=-Iinclude -I/System/Library/Frameworks/JavaVM.framework/Versions/1.5.0/Home/include -I$(COININCDIR)

RINSTDIR=../inst/
JNIINSTDIR=$(RINSTDIR)/libsi386

JARDIR = $(RINSTDIR)/java
OBJECTS = CBCPeer.o CBC.o

PKG_LIBS=-L$(COINLIBDIR) -lCbc -lCgl -lOsiClp -lOsiCbc -lOsi -lClp -lCoinUtils 


SUBDIRS = depends/coin-Cbc/


FARMLP_LIB=@JNIPREFIX@farmLP@JNISO@

.PHONY: all subdirs

all: $(SHLIB) jnilib
	
jnilib: farmlib subdirs CBCPeer.o CBC.o jfm_lp_CBCPeer.h
	
farmlib:	subdirs CBCPeer.o CBC.o jfm_lp_CBCPeer.h
	$(CXX) -Q -bundle $(JAVA_LIBS) $(JAVA_CPPFLAGS) -o $(FARMLP_LIB) $(PKG_LIBS) $(CBCLIBOBJECTS)
	cp $(FARMLP_LIB) $(JNIINSTDIR)
	
jfm_lp_CBCPeer.h	:	./java/src/jfm/lp/CBCPeer.java
	javah -jni -classpath $(JARDIR)/javawfm.jar jfm.lp.CBCPeer
	
CBCPeer.o: CBCPeer.cpp jfm_lp_CBCPeer.h subdirs
	$(CXX) -c $< $(PKG_CXXFLAGS)
	
CBC.o: CBC.cpp jfm_lp_CBCPeer.h subdirs
	$(CXX) -c $< $(PKG_CXXFLAGS)

subdirs:
	$(MAKE) install -C $(SUBDIRS)

clean:
	$(MAKE) clean -C $(SUBDIRS)
	
	